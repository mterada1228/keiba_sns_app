<% if object.errors.any? %> <!--エラー有件の時のみ表示-->
  <div id="error_explanation">
    <div class="alert alert-danger">
      <%= object.errors.count %> 個の入力エラーがあります。
    </div>
    <ul>
    <% object.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>