<%= form_for(@kaime) do |k| %>
  <table class="table table-responsive" style="white-space: nowrap">
    <thead>
      <tr>
        <th></th>
        <th>馬番</th>
        <th>馬名</th>
      </tr>
    </thead>
    <tbody>
      <% @hoses.each do |hose| %>
        <% if !hose[1][:name].nil? %>
          <tr class='gate_<%= hose[1][:gate_col] %>'>
            <td>
              <font color="#000000">
                <%= k.radio_button :first_hoses, hose[1][:hose_num] %>
              </font>
            </td>
            <td><%= hose[1][:hose_num] %></td>
            <td><%= hose[1][:name] %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
  
  <%= k.label "購入金額" %>
  <%= k.text_field :betting, class: 'form-control', style: "display: inline" %>

  <%= hidden_field_tag :micropost_id, @micropost.id %>
  <%= hidden_field_tag :baken_type, "単勝" %>

  <%= k.submit "決定", class: "btn btn-primary center-block" %>
  <button type="button" class="btn btn-primary center-block close_kaime">戻る</button>

<% end %>